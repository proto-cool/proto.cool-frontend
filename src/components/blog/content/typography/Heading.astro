---
import renderNode, { getSlugFromNode } from "@lib/blog/lexicalUtils";
import Text from "./Text.astro";
const { tag, children } = Astro.props;

let Component = tag;
---

<Component class:list={["lowercase"]} id={getSlugFromNode(children)}>
    {children.map((child) => <Text content={renderNode(child)} />)}
</Component>
