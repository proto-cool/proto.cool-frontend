---
import renderNode from "@lib/blog/lexicalUtils";
import Text from "./Text.astro";
const { fields, children } = Astro.props;
---

<a
    href={fields.url}
    rel={fields.newTab ? "noopener noreferrer" : null}
    target={fields.newTab ? "_blank" : null}
    class:list={[
        "text-theme-color-primary",
        "hover:text-base-800",
        "hover:bg-theme-color-primary",
        "underline",
        "decoration-2",
        "underline-offset-2",
        "transition-colors",
    ]}>{children.map((child) => <Text content={renderNode(child)} />)}</a
>
