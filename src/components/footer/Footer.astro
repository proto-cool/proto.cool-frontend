---
import SiteConfig from "@/site.config";
import SocialLinks from "../social/SocialLinks.astro";
import Logo from "../logo/Logo.astro";
---

<footer class="mt-24 pb-12 text-theme-fg-secondary">
    <div class="container">
        <div class="relative border-t-2 border-theme-bg-tertiary pt-16">
            <!-- Decorative line -->
            <div
                class="absolute -top-[2px] left-0 h-[2px] w-24 bg-theme-color-primary shadow-[0_0_10px_var(--color-primary)]"
            >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 mb-16">
                <!-- Site Info -->
                <div class="md:col-span-2 lg:col-span-6 flex flex-col gap-6 items-start">
                    <Logo />
                    <p class="text-base/relaxed max-w-md text-theme-fg-secondary">
                        {SiteConfig.description}
                    </p>
                    <div class="flex items-center gap-3 text-[10px] uppercase tracking-[0.2em] text-theme-fg-tertiary font-bold">
                        <span class="relative flex h-2 w-2">
                            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-theme-color-primary opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-2 w-2 bg-theme-color-primary"></span>
                        </span>
                        <span>Available for new projects</span>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="md:col-span-1 lg:col-span-3 flex flex-col gap-4">
                    <h3 class="text-xs font-bold uppercase tracking-[0.2em] text-theme-fg-primary">
                        Navigation
                    </h3>
                    <nav class="flex flex-col gap-3">
                        {
                            SiteConfig.navLinks.map((link) => (
                                <a
                                    href={link.href}
                                    class="text-sm underline-hover w-fit py-0.5"
                                >
                                    {link.text}
                                </a>
                            ))
                        }
                    </nav>
                </div>

                <!-- Social & Connect -->
                <div class="md:col-span-1 lg:col-span-3 flex flex-col gap-4">
                    <h3 class="text-xs font-bold uppercase tracking-[0.2em] text-theme-fg-primary">
                        Connect
                    </h3>
                    <div class="flex flex-col gap-4">
                        <p class="text-sm text-balance">
                            Follow my journey and check out my latest work on social media.
                        </p>
                        <SocialLinks className="w-fit" />
                    </div>
                </div>
            </div>

            <div
                class="border-t border-theme-bg-tertiary pt-8 flex flex-col items-center md:flex-row md:justify-between gap-6"
            >
                <div class="flex flex-col items-center md:items-start gap-1">
                    <p class="text-[12px] lowercase tracking-wider text-theme-fg-tertiary font-medium">
                        &copy; {new Date().getFullYear()} {SiteConfig.name}. All rights reserved.
                    </p>
                </div>

                <div class="flex items-center gap-4">
                    <p class="text-[12px] lowercase tracking-wider text-theme-fg-tertiary font-medium flex items-center gap-2">
                        Built with
                        <a
                            href="https://astro.build"
                            target="_blank"
                            class="text-theme-color-primary hover:text-glow transition-all"
                            >astro</a
                        >
                        &
                        <a
                            href="https://payloadcms.com"
                            target="_blank"
                            class="text-theme-color-primary hover:text-glow transition-all"
                            >payload</a
                        >
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
