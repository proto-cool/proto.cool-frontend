---
interface Props {
    title: string;
    class?: string;
    rest?: any;
}

const { title, class: className, ...rest } = Astro.props as Props;
---

<div class=`flex flex-col gap-4 rounded-xl p-4 ${className}` {...rest}>
    <div class="flex flex-wrap items-center gap-4">
        <h3 class="h3">{title}</h3>
    </div>
    <slot />
</div>
