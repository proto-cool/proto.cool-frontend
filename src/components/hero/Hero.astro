---
import SiteConfig from "@/site.config";
import { Image } from "astro:assets";
import { getHeroContent, getImageSrc } from "@/lib/payload/utils";

// components
import SocialLinks from "@components/social/SocialLinks.astro";
import RichTextContentRenderer from "@/components/core/RichTextContentRenderer.astro";

// data
const hero = await getHeroContent();
---

<section
    id="hero"
    class="relative w-full py-8 flex flex-col-reverse md:flex-row items-center gap-10 lg:gap-16"
>
    <!-- Background Decorative Glows -->
    <div 
        class="absolute top-1/2 -left-24 w-64 md:w-96 h-64 md:h-96 bg-theme-color-primary/10 blur-[100px] rounded-full -z-10 animate-pulse"
        style="animation-duration: 10s;"
    ></div>

    <div
        class="flex-1 flex items-start flex-col gap-8"
        data-cascade="fadeIn"
        data-cascade-delay="0.2"
    >
        <div class="flex flex-col gap-4 md:gap-6 
            [&_h1]:text-3xl [&_h1]:md:text-5xl [&_h1]:lg:text-6xl [&_h1]:font-medium [&_h1]:tracking-tight [&_h1]:leading-[1.1] [&_h1]:text-balance
            [&_p]:text-base [&_p]:text-theme-fg-secondary [&_p]:max-w-xl [&_p]:leading-relaxed">
            <RichTextContentRenderer
                node={hero.content.root}
            />
        </div>
        
        <div class="flex flex-wrap items-center gap-6 md:gap-10" data-cascade="fadeInUp" data-cascade-delay="0.6">
            <SocialLinks variant="hero" />
        </div>
    </div>

    {
        SiteConfig.authorPhoto?.url ? (
            <div class="relative group shrink-0" data-cascade="fadeIn" data-cascade-delay="0.4">
                <!-- Decorative rotating ring -->
                <div class="absolute -inset-4 border-2 border-dashed border-theme-color-primary/20 rounded-full animate-[spin_42s_linear_infinite] group-hover:border-theme-color-primary/40 transition-colors duration-700"></div>
                
                <!-- Decorative Glow behind image -->
                <div class="absolute -inset-2 bg-theme-color-primary/10 rounded-full blur-2xl group-hover:bg-theme-color-primary/20 transition-all duration-700"></div>
                
                <div class="img-tint-saturated rounded-full overflow-hidden shadow-2xl relative border-2 border-theme-bg-tertiary transition-transform duration-700 group-hover:scale-[1.05]">
                    <Image
                        class="aspect-square size-[200px] md:size-[220px] lg:size-[280px] object-cover"
                        width={640}
                        height={640}
                        src={getImageSrc(SiteConfig.authorPhoto.url)}
                        alt={`${SiteConfig.authorName} profile picture`}
                        loading="eager"
                        quality="high"
                    />
                </div>

                <!-- Available for projects status -->
                <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 flex items-center gap-2.5 text-[10px] lowercase tracking-wider text-theme-fg-secondary font-medium px-3 py-1.5 bg-theme-bg-primary border border-theme-bg-tertiary rounded-full shadow-lg z-20 whitespace-nowrap">
                    <span class="relative flex h-1.5 w-1.5">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-theme-color-primary opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-theme-color-primary"></span>
                    </span>
                    <span>available for new projects</span>
                </div>
            </div>
        ) : null
    }

    <!-- Scroll indicator caret -->
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-1 text-theme-fg-tertiary/40 animate-[scroll-indicator_3s_ease-in-out_infinite]">
        <span class="text-[10px] lowercase tracking-widest font-medium">scroll</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
        </svg>
    </div>
</section>
