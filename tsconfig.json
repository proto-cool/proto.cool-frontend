{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/lib/*"],
            "@layouts/*": ["src/layouts/*"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@images/*": ["src/assets/images/*"],
            "@videos/*": ["src/assets/videos/*"],
            "@/*": ["src/*"]
        }
    }
}
